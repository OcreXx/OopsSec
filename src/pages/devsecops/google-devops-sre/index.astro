  <script>
    // Sidebar navigation - smooth scrolling and active state
    document.querySelectorAll('.sidebar-link, .sidebar-sublink').forEach(link => {
      link.addEventListener('click', function(e) {
        const href = this.getAttribute('href');
        if (href && href.startsWith('#')) {
          e.preventDefault();
          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);
          if (targetElement) {
            targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
            
            // Update active state
            document.querySelectorAll('.sidebar-link').forEach(l => l.classList.remove('active'));
            if (this.classList.contains('sidebar-link')) {
              this.classList.add('active');
            }
          }
        }
      });
    });

    // Intersection Observer for active section tracking
    const sections = document.querySelectorAll('.gcp-section');
    const navLinks = document.querySelectorAll('.sidebar-sublink');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const id = entry.target.getAttribute('id');
          navLinks.forEach(link => {
            if (link.getAttribute('href') === `#${id}`) {
              link.style.color = '#a5b4fc';
              link.style.fontWeight = '600';
            } else {
              link.style.color = 'rgba(255, 255, 255, 0.6)';
              link.style.fontWeight = '400';
            }
          });
        }
      });
    }, { threshold: 0.3 });

    sections.forEach(section => observer.observe(section));

    // Quiz functionality
    const quizQuestions = document.querySelectorAll('.quiz-question');
    const quizResults = document.querySelector('.quiz-results');
    const quizScore = document.querySelector('.quiz-score');
    const quizReset = document.querySelector('.quiz-reset');
    
    let answeredQuestions = 0;
    let correctAnswers = 0;

    quizQuestions.forEach(question => {
      const options = question.querySelectorAll('.quiz-option input[type="radio"]');
      const feedback = question.querySelector('.quiz-feedback');
      
      options.forEach(option => {
        option.addEventListener('change', function() {
          if (this.closest('.quiz-question').dataset.answered) return;
          
          this.closest('.quiz-question').dataset.answered = 'true';
          answeredQuestions++;
          
          const isCorrect = this.parentElement.querySelector('input').hasAttribute('data-correct');
          
          if (isCorrect) {
            correctAnswers++;
            this.closest('.quiz-option').classList.add('correct');
            feedback.textContent = '‚úì ¬°Correcto!';
            feedback.classList.add('correct');
          } else {
            this.closest('.quiz-option').classList.add('incorrect');
            const correctOption = question.querySelector('input[data-correct]').closest('.quiz-option');
            correctOption.classList.add('correct');
            feedback.textContent = '‚úó Incorrecto. La respuesta correcta est√° marcada en verde.';
            feedback.classList.add('incorrect');
          }
          
          // Disable all options in this question
          options.forEach(opt => opt.disabled = true);
          
          // Check if all questions answered
          if (answeredQuestions === quizQuestions.length) {
            showResults();
          }
        });
      });
    });

    function showResults() {
      const percentage = Math.round((correctAnswers / quizQuestions.length) * 100);
      let message = '';
      
      if (percentage >= 90) {
        message = 'üéâ ¬°Excelente! Dominas los conceptos.';
      } else if (percentage >= 70) {
        message = 'üëç ¬°Bien hecho! Vas por buen camino.';
      } else if (percentage >= 50) {
        message = 'üìö No est√° mal, pero repasa algunos conceptos.';
      } else {
        message = 'üí™ Sigue estudiando, ¬°puedes mejorar!';
      }
      
      quizScore.innerHTML = `Has acertado <strong>${correctAnswers}</strong> de <strong>${quizQuestions.length}</strong> preguntas (${percentage}%)<br>${message}`;
      quizResults.style.display = 'block';
      
      // Scroll to results
      quizResults.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }

    quizReset.addEventListener('click', function() {
      answeredQuestions = 0;
      correctAnswers = 0;
      
      quizQuestions.forEach(question => {
        delete question.dataset.answered;
        const options = question.querySelectorAll('.quiz-option');
        const inputs = question.querySelectorAll('input[type="radio"]');
        const feedback = question.querySelector('.quiz-feedback');
        
        options.forEach(opt => {
          opt.classList.remove('correct', 'incorrect');
        });
        
        inputs.forEach(input => {
          input.checked = false;
          input.disabled = false;
        });
        
        feedback.textContent = '';
        feedback.classList.remove('correct', 'incorrect');
      });
      
      quizResults.style.display = 'none';
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  </script>
