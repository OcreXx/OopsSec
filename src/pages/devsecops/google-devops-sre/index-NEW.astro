  <script>
    // Tab System
    const tabButtons = document.querySelectorAll('.sidebar-link[data-tab]');
    const tabContents = document.querySelectorAll('.tab-content');

    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        const tabId = button.getAttribute('data-tab');
        
        // Remove active class from all buttons and tabs
        tabButtons.forEach(btn => btn.classList.remove('active'));
        tabContents.forEach(content => content.classList.remove('active'));
        
        // Add active class to clicked button and corresponding tab
        button.classList.add('active');
        document.getElementById(`tab-${tabId}`).classList.add('active');
        
        // Toggle expanded state for sidebar section
        const section = button.closest('.sidebar-section');
        const wasExpanded = section.classList.contains('expanded');
        
        // Collapse all sections
        document.querySelectorAll('.sidebar-section').forEach(s => s.classList.remove('expanded'));
        
        // Expand clicked section if it wasn't expanded
        if (!wasExpanded) {
          section.classList.add('expanded');
        }
      });
    });

    // Expand first section by default
    document.querySelector('.sidebar-section').classList.add('expanded');

    // Sublink navigation within tabs
    document.querySelectorAll('.sidebar-sublink').forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const scrollId = link.getAttribute('data-scroll');
        const element = document.getElementById(scrollId);
        
        if (element) {
          element.scrollIntoView({ behavior: 'smooth', block: 'start' });
          
          // Update active state
          document.querySelectorAll('.sidebar-sublink').forEach(l => l.classList.remove('active'));
          link.classList.add('active');
        }
      });
    });

    // Quiz Functionality
    document.querySelectorAll('.quiz-submit').forEach(button => {
      button.addEventListener('click', function() {
        const container = this.closest('.quiz-container');
        const questions = container.querySelectorAll('.quiz-question');
        let correct = 0;
        let total = 0;

        questions.forEach(question => {
          total++;
          const options = question.querySelectorAll('.quiz-option input[type="radio"]');
          const feedback = question.querySelector('.quiz-feedback');
          let answered = false;
          let isCorrect = false;

          options.forEach(option => {
            option.disabled = true;
            if (option.checked) {
              answered = true;
              const label = option.closest('.quiz-option');
              
              if (option.hasAttribute('data-correct')) {
                isCorrect = true;
                label.classList.add('correct');
                feedback.textContent = '‚úì ¬°Correcto!';
                feedback.classList.add('correct');
                correct++;
              } else {
                label.classList.add('incorrect');
                feedback.textContent = '‚úó Incorrecto';
                feedback.classList.add('incorrect');
                
                // Show correct answer
                question.querySelectorAll('input[data-correct]').forEach(correctOption => {
                  correctOption.closest('.quiz-option').classList.add('correct');
                });
              }
            }
          });

          if (!answered) {
            feedback.textContent = '‚ö†Ô∏è No has respondido esta pregunta';
            feedback.style.color = '#fbbf24';
          }
        });

        // Show results
        const results = container.querySelector('.quiz-results');
        const percentage = Math.round((correct / total) * 100);
        let message = '';

        if (percentage >= 80) {
          message = 'üéâ ¬°Excelente! Dominas el tema.';
        } else if (percentage >= 60) {
          message = 'üëç ¬°Bien hecho! Vas por buen camino.';
        } else {
          message = 'üìö Repasa el contenido para mejorar.';
        }

        results.innerHTML = `<strong>${correct} de ${total} correctas (${percentage}%)</strong><br>${message}`;
        results.style.display = 'block';
        this.style.display = 'none';
      });
    });
  </script>
